# Docker Compose Environment Variables
# Copy this to .env.docker and update values

# MySQL Configuration
MYSQL_ROOT_PASSWORD=secure_root_password_change_me
MYSQL_DATABASE=pfc
MYSQL_USER=pfc_user
MYSQL_PASSWORD=secure_password_change_me
MYSQL_PORT=3306

# Backend Configuration
BACKEND_PORT=8000
SECRET_KEY=change-this-to-a-secure-random-key-minimum-32-characters-long
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=7
ENVIRONMENT=production

# Frontend Configuration
FRONTEND_PORT=80
VITE_API_URL=http://localhost:8000

# Optional: Uncomment for custom configuration
# API_V1_PREFIX=/api
# CORS_ORIGINS=["http://localhost","http://localhost:80"]
