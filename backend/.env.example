# Production Environment Configuration
# Copy this file to .env and update with your actual credentials

# Database Configuration (AlwaysData MySQL)
DATABASE_URL=mysql+pymysql://username:password@mysql-yourdomain.alwaysdata.net/yourdatabase

# Security & JWT
SECRET_KEY=your-secure-32-character-secret-key-change-in-production
ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=7

# CORS Configuration (JSON array format)
CORS_ORIGINS=["http://localhost:5173","https://your-frontend.netlify.app"]

# API Configuration
API_V1_PREFIX=/api

# Environment
ENVIRONMENT=production

# Monitoring & Error Tracking (OPTIONAL)
ENABLE_SENTRY=false
SENTRY_DSN=
# Get your Sentry DSN from https://sentry.io
