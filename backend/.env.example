# Database Configuration
DATABASE_URL=mysql+pymysql://root:password@localhost/pfc

# Security & JWT
SECRET_KEY=your-secret-key-at-least-32-characters-long-change-in-production
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=7
ALGORITHM=HS256

# CORS Configuration (comma-separated origins)
# Development: http://localhost:5173
# Production: https://yourapp.netlify.app,https://yourdomain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# API Configuration
API_V1_PREFIX=/api

# Environment
ENVIRONMENT=development

# Monitoring & Error Tracking (OPTIONAL)
ENABLE_SENTRY=false
SENTRY_DSN=
# Get your Sentry DSN from https://sentry.io
